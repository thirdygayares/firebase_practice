<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="233dp"
        android:layout_height="193dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="89dp"
        app:srcCompat="@drawable/herons_conduct_logo_2" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="262dp"
        android:layout_height="122dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="83dp"
        app:srcCompat="@drawable/herons_conduct" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="-24dp"
        android:layout_marginEnd="32dp"
        app:srcCompat="@drawable/umak_disciplinary_management_system" />

    <EditText
        android:id="@+id/logIn_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="36dp"
        android:hint="Username"
        android:elevation="10dp"
        android:background="@drawable/login_edit_text"
        android:textColorHint="#243A69"
        android:drawableLeft="@drawable/ic_baseline_perm_identity_24"
        android:padding="10dp"
        android:drawablePadding="5dp"/>

    <EditText
        android:id="@+id/logIn_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="35dp"
        android:drawableLeft="@drawable/ic_baseline_visibility_off_24"
        android:drawablePadding="5dp"
        android:hint="Password"
        android:padding="10dp"
        android:textColorHint="#243A69"
        android:elevation="10dp"
        android:background="@drawable/login_edit_text"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/signInBTN"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logIn_password"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="69dp"
        android:text="Sign in"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18dp"
        android:background="@drawable/blue_btn" />

    <TextView
        android:id="@+id/forgotBTN"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signInBTN"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="130dp"
        android:text="Forgot password?"
        android:textColor="#2F66F6"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/loginSingUp"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgotBTN"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="104dp"
        android:layout_toEndOf="@+id/textView3"
        android:text="Sing Up"
        android:textColor="#2F66F6"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgotBTN"
        android:layout_alignParentStart="true"
        android:layout_marginStart="99dp"
        android:layout_marginTop="60dp"
        android:text="Don't have an account?"
        android:textColor="@color/black" />


</RelativeLayout>
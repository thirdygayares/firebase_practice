<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StudentSettingsFragment"
    android:background="@color/Background">

    <GridLayout
        android:id="@+id/grid_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="3"
        android:columnCount="1"
        >


        <androidx.cardview.widget.CardView
            android:id="@+id/headerCard"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            app:cardBackgroundColor="@color/Primary"
            android:layout_columnWeight="1"
            app:cardElevation="8dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_vertical|center_horizontal|left">

                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/avatar_0"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="fill"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginRight="20dp"
                    >
                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Juan Dela Cruz"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:shadowColor="@color/Secondary"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="5"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/metropolis_black"
                        android:textAlignment="textStart"/>

                    <TextView
                        android:id="@+id/txt_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Student)"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:shadowColor="@color/Secondary"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="5"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/metropolis_blackitalic"
                        android:textAlignment="textStart"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Herons Conduct: Student Disciplinary Management System"
                        android:textColor="@color/white"
                        android:textSize="6sp"
                        android:shadowColor="@color/Secondary"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="5"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/metropolis_semibold_italic"
                        android:textAlignment="textStart"/>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/settingsBodyCard1"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginTop="8dp"
            app:cardElevation="8dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:layout_gravity="center_vertical|center_horizontal">

                <LinearLayout
                    android:id="@+id/notifications_settings_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notifications"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="@font/metropolis_regular"
                        android:textAlignment="textStart"/>

                    <Switch
                        android:id="@+id/notifSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_marginStart="180dp"
                        android:layout_column="1"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/about_settings_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About Herons Conduct"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="@font/metropolis_regular"
                        android:textAlignment="textStart"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="110dp"
                        android:src="@drawable/arrow"/>


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/FAQs_settings_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FAQs"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="@font/metropolis_regular"
                        android:textAlignment="textStart"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="260dp"
                        android:src="@drawable/arrow"/>
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/settingsBodyCard2"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardElevation="8dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:layout_gravity="center_vertical|center_horizontal">

                <LinearLayout
                    android:id="@+id/privacy_settings_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Privacy Policy"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="@font/metropolis_regular"
                        android:textAlignment="textStart"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="187dp"
                        android:src="@drawable/arrow"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/terms_settigns_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terms of Service"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="@font/metropolis_regular"
                        android:textAlignment="textStart"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="161dp"
                        android:src="@drawable/arrow"/>


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/logout_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        android:textColor="@color/Error"
                        android:textSize="18sp"
                        android:fontFamily="@font/metropolis_regular"
                        android:textAlignment="textStart"/>

                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>




    </GridLayout>

</RelativeLayout>